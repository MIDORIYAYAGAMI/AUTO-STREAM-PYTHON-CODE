import requests

url = "http://127.0.0.1:8000/chat"
sid = "test-user"

messages = [
    "Hi",
    "What does the Pro plan include?",
    "I want to sign up",
    "John",
    "john@gmail.com",
    "YouTube"
]

for msg in messages:
    r = requests.post(url, json={"session_id": sid, "message": msg})
    print("User:", msg)
    print("Agent:", r.json()["response"])
    print("-" * 40)
